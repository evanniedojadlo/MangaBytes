source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Database
gem 'pg'

# Assets
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'bootstrap-sass', '~> 3.0.3.0'

# JSON API
gem 'jbuilder', '~> 1.2'

# Authentication
gem 'devise'

group :development, :test do
  gem 'pry'
end

group :test do
  gem 'database_cleaner'
  gem 'vcr'
  gem 'factory_girl'
  gem 'rspec-rails'
  gem 'rspec'
end
